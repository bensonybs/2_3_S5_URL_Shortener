<div class="container">
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">URL Shortener</a>
      <a class="nav-link" href="/">Home Page</a>
    </div>
  </nav>
  <h1>Short URL List</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Original URL</th>
        <th scope="col">Short URL</th>
        <th scope="col">Clicked</th>
        <th scope="col">Description</th>
        <th scope="col">More</th>
      </tr>
    </thead>
    <tbody>
      {{#each shortURLs as |alias|}}
      <tr>
        <td scope="row">{{this.url}}</td>
        <td><a href="http://localhost:3000/{{this.url_id}}" target="_blank" id="{{this.url_id}}">http://localhost:3000/{{this.url_id}}</a></td>
        <td>{{this.clicked}}</td>
        <td>{{this.description}}</td>
        <td>
          <div class="mb-1"><button onclick="copyToClipBoard('{{this.url_id}}')" class="btn btn-outline-primary">Copy</button></div>
          
          <form action="/short_urls/{{this.url_id}}?_method=DELETE" method="post"><button class="btn btn-outline-danger">Delete</button></form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>